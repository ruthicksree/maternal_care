<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".d2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/download"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBaseline_toBaselineOf="parent"
        tools:layout_editor_absoluteX="35dp">

        <ImageView
            android:layout_width="677dp"
            android:layout_height="351dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mon2"/>

        <TextView
            android:layout_width="344dp"
            android:layout_height="125dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="As the baby starts to grow from the 2nd trimester onwards, you will need to change the way you used to sit. While sitting, don't forget to keep your back straight and the shoulders must be pulled back. The buttocks should reach the back of the chair.
                          During the second trimester, people should continue eating a balanced diet."
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>