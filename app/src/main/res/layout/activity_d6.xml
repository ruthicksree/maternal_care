<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".d6">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/download"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBaseline_toBaselineOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="362dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mont6">

            </ImageView>

            <TextView
                android:layout_width="344dp"
                android:layout_height="1456dp"
                android:layout_gravity="center_horizontal"
                android:text="Sleep on your side with a pillow between your legs.
Bend your knees (squat) to pick things up from the floor or low places.
Use a step stool to reach high shelves."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>