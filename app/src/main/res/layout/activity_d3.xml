<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".d3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/download"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBaseline_toBaselineOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="271dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/third">

        </ImageView>

        <TextView
            android:layout_width="344dp"
            android:layout_height="172dp"
            android:layout_gravity="center_horizontal"
            android:text="Sit up with your back straight and your shoulders back. Your buttocks should touch the back of your chair. Sit with a back support (such as a small, rolled-up towel or a lumbar roll) placed at the hollow of your back."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>