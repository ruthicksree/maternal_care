<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Month9Fragment">

    <ScrollView
        android:layout_width="421dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="403dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/download"
                android:fontFamily="sans-serif-black"
                android:text="Month 9(36 Weeks)"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/month9"
                app:layout_constraintBottom_toBottomOf="@id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="434dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/download"
                android:paddingLeft="100sp"
                android:text="Ideal height:47.4cm\n Ideal weight:2622gms"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView4" />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="359dp"
                android:layout_height="123dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="15sp"
                android:text="                                 Lettuce Sized Baby\n
Mumma,I am now the size of of a head of the lettuce,and my wrinkly suit of skin is filling out as I gets plumper."
                android:textColor="@color/little_pink"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="430dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/download"
                android:paddingLeft="70dp"
                android:text="My photo in my Mom's Safe bag "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="270dp"
                android:layout_height="271dp"
                android:src="@drawable/scan7"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/little_pink"
                android:textSize="20dp"
                android:text="What you are seeing: \n
-Baby's face looks identical to the profile you'll be seeing in person in a few weeeks.\n
-Baby will be adding 1/2 pound each week until birth. "/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>